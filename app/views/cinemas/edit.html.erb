<h1>Редактирование кинотеатра</h1>
 
<%= form_for :cinema, url: cinema_path(@cinema), method: :patch do |f| %>
  <p>
    <%= f.label :название %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :описание %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.label :адрес %><br>
    <%= f.text_area :address %>
  </p>
 
  <p>
    <%= f.submit :обновить%>
  </p>
<% end %>

<%= link_to 'Назад', cinemas_path %>