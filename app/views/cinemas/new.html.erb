<h1>Добавить кинотеатр</h1>

<%= form_for :cinema, url: cinemas_path do |f| %>
  <p>
    <%= f.label :название %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :описание %><br>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.label :адрес %><br>
    <%= f.text_area :address %>
  </p>
  </p>
 
  <p>
    <%= f.submit :сохранить%>
  </p>
<% end %>

<%= link_to 'Назад', cinemas_path %>